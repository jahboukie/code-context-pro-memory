{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/getPricing",
        "function": "getPricing"
      },
      {
        "source": "/api/createCheckout",
        "function": "createCheckout"
      },
      {
        "source": "/api/stripeWebhook",
        "function": "stripeWebhook"
      },
      {
        "source": "/api/validateLicense",
        "function": "validateLicense"
      },
      {
        "source": "/api/reportUsage",
        "function": "reportUsage"
      },
      {
        "source": "/api/getLicenseKey",
        "function": "getLicenseKey"
      },
      {
        "source": "/api/validateUsage",
        "function": "validateUsage"
      },
      {
        "source": "/api/getAuthToken",
        "function": "getAuthToken"
      },
      {
        "source": "/success",
        "destination": "/success.html"
      },
      {
        "source": "/cancel",
        "destination": "/cancel.html"
      },
      {
        "source": "/docs",
        "destination": "/docs/index.html"
      }
    ],
    "redirects": [
      {
        "source": "https://codecontext-memory-pro.web.app",
        "destination": "https://codecontextpro.com",
        "type": 301
      },
      {
        "source": "https://codecontext-memory-pro.firebaseapp.com",
        "destination": "https://codecontextpro.com",
        "type": 301
      },
      {
        "source": "https://www.codecontextpro.com",
        "destination": "https://codecontextpro.com",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains; preload"
          }
        ]
      }
    ]
  }
}